
# ================================================================================ #
# Config
# ================================================================================ #

# Allow insecure directories
ZSH_DISABLE_COMPFIX=true
# Disable update prompts
DISABLE_UPDATE_PROMPT=true
# Auto-update frequency in days
UPDATE_ZSH_DAYS=30
# Brew prefix
BREW_PREFIX=$(dirname $(dirname $(which brew)))
# Case insensitve autocomplete
zstyle ':completion:*' matcher-list 'm:{a-z}={A-Z}'
# Turn on correction suggestions
unsetopt correct_all
setopt correct
# Turn on 256color support
TERM=xterm-256color

# ================================================================================ #
# Startup
# ================================================================================ #

# ZSH
source $DOTFILES/shell/alias.zsh
source $DOTFILES/shell/exports.zsh
source $DOTFILES/shell/functions.zsh

# Antigen
source $(brew --prefix)/share/antigen/antigen.zsh
antigen init ~/.antigenrc

# NVM plugin settings
export NVM_LAZY_LOAD=1
export NVM_COMPLETION=true

# Starship
eval "$(starship init zsh)"

# Zoxide
eval "$(zoxide init zsh)"